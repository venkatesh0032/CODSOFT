# calculator.py

def calculator():
    print("===== Simple Calculator =====")
    print("Select operation:")
    print("1Ô∏è‚É£  Addition (+)")
    print("2Ô∏è‚É£  Subtraction (-)")
    print("3Ô∏è‚É£  Multiplication (*)")
    print("4Ô∏è‚É£  Division (/)")
    print("5Ô∏è‚É£  Modulus (%)")
    print("6Ô∏è‚É£  Exponent (**)")
    print("7Ô∏è‚É£  Floor Division (//)")

    try:
        num1 = float(input("\nEnter first number: "))
        num2 = float(input("Enter second number: "))
        choice = input("Enter operation (1-7 or symbol [+ - * / % ** //]): ").strip()

        result = None

        if choice in ["1", "+"]:
            result = num1 + num2
        elif choice in ["2", "-"]:
            result = num1 - num2
        elif choice in ["3", "*"]:
            result = num1 * num2
        elif choice in ["4", "/"]:
            if num2 != 0:
                result = num1 / num2
            else:
                print("‚ö† Error: Division by zero is not allowed!")
        elif choice in ["5", "%"]:
            if num2 != 0:
                result = num1 % num2
            else:
                print("‚ö† Error: Modulus by zero is not allowed!")
        elif choice in ["6", "**"]:
            result = num1 ** num2
        elif choice in ["7", "//"]:
            if num2 != 0:
                result = num1 // num2
            else:
                print("‚ö† Error: Floor division by zero is not allowed!")
        else:
            print("‚ö† Invalid choice!")

        if result is not None:
            print(f"\n‚úÖ Result: {result}\n")

    except ValueError:
        print("‚ö† Invalid input! Please enter numbers only.")

if __name__ == "__main__":
    while True:
        calculator()
        again = input(" Do you want to perform another calculation? (y/n): ").lower()
        if again != "y":
            print("üëã Exiting Calculator. Goodbye!")
            break
